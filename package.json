{
  "name": "armurerie",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "cross-env NEXTAUTH_DEBUG=true NODE_ENV=development next dev",
    "build": "npm run generate:roles && prisma generate && next build",
    "start": "next start",
    "generate:roles": "tsx ./scripts/generate-roles.ts",
    "db:push": "dotenv -e .env.development -- prisma db push",
    "db:migrate": "dotenv -e .env.development -- prisma migrate dev",
    "db:seed": "dotenv -e .env.development -- prisma db seed",
    "db:validate": "prisma format && prisma validate",
    "clean": "npx biome check --write . && npx biome format --write .",
    "check-types": "tsc --noEmit",
    "knip": "knip",
    "test": "vitest",
    "update-deps": "ncu",
    "update-deps:upgrade": "ncu -u",
    "clean:deps": "rimraf node_modules/.cache",
    "clean:build": "rimraf .next",
    "pre-deploy:check": "node ./scripts/pre-deploy-check.js",
    "prepare": "husky && husky install",
    "test:ci": "cross-env LANG=en_US.UTF-8 LC_ALL=en_US.UTF-8 vitest run --coverage"
  },
  "dependencies": {
